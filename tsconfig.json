{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ],
        "target": "es5",
        "outDir": "lib",
        "sourceMap": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noEmitHelpers": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true
    },
    "exclude": [
        "node_modules"
    ]
}
